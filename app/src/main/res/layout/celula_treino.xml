<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#627280">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="80dp"
        android:background="#0BD613"
        app:layout_constraintEnd_toStartOf="@+id/textNomeTreino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textIdTreino"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:text="A"
            android:textColor="#C10C0C"

            android:textSize="34sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="58dp"
        android:background="#2DD519"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textNomeTreino"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/estrelaa" />
    </FrameLayout>

    <TextView
        android:id="@+id/textNomeTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#0E0E0E"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>